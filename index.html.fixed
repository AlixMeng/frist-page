        // 加载配置（从localStorage或默认，并合并缺失字段）
        function loadConfig() {
            const saved = localStorage.getItem('siteConfig');
            if (saved) {
                const parsed = JSON.parse(saved);
                // 合并默认配置，确保所有字段都存在
                return {
                    apps: parsed.apps || DEFAULT_CONFIG.apps,
                    favorites: parsed.favorites || DEFAULT_CONFIG.favorites,
                    music: parsed.music || DEFAULT_CONFIG.music,
                    quotes: parsed.quotes || DEFAULT_CONFIG.quotes
                };
            }
            return JSON.parse(JSON.stringify(DEFAULT_CONFIG));
        }

        // 保存配置
        function saveConfig(config) {
            localStorage.setItem('siteConfig', JSON.stringify(config));
        }

        // 当前配置
        let config = loadConfig();

        // 重置配置
        function resetConfig() {
            config = JSON.parse(JSON.stringify(DEFAULT_CONFIG));
            saveConfig(config);
            location.reload();
        }

        // 渲染应用导航
        function renderApps() {
            const appsGrid = document.querySelector('.apps-grid');
            const count = config.apps.length;
            appsGrid.setAttribute('data-count', count);
            appsGrid.innerHTML = config.apps.map(app => {
                let iconContent;
                if (app.iconUrl) {
                    iconContent = `<img src="${app.iconUrl}" style="width: 100%; height: 100%; object-fit: contain;" onerror="this.parentElement.innerHTML='<i class=\\'fas fa-question\\'></i>'">`;
                } else if (app.iconClass) {
                    iconContent = `<i class="${app.iconClass}" style="color: ${app.iconColor || '#007AFF'}; font-size: 32px;"></i>`;
                } else {
                    iconContent = app.icon || '📱';
                }
                // 确保URL是完整路径
                let url = app.url || '#';
                if (url !== '#' && !url.startsWith('http://') && !url.startsWith('https://') && !url.startsWith('/')) {
                    url = 'http://' + url;
                }
                return `
                    <a href="${url}" class="app-item" target="_blank" rel="noopener noreferrer" title="${app.name} - ${url}">
                        <div class="app-icon">${iconContent}</div>
                        <div class="app-name">${app.name}</div>
                    </a>
                `;
            }).join('');
        }

