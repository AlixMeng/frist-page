            ],
            other: [
                { url: 'https://images.unsplash.com/photo-1550684848-fac1c5b4e853?w=600&h=750&fit=crop', title: '霓虹都市', desc: '赛博朋克之夜' },
                { url: 'https://images.unsplash.com/photo-1494438639946-1ebd1d20bf85?w=600&h=750&fit=crop', title: '极简建筑', desc: '线条与光影' },
                { url: 'https://images.unsplash.com/photo-1558591710-4b4a1ae0f04d?w=600&h=750&fit=crop', title: '抽象色彩', desc: '艺术的碰撞' },
                { url: 'https://images.unsplash.com/photo-1518640467707-6811f4a6ab73?w=600&h=750&fit=crop', title: '微距世界', desc: '细节的奥秘' },
                { url: 'https://images.unsplash.com/photo-1509021436665-8f07dbf5bf1d?w=600&h=750&fit=crop', title: '几何图形', desc: '数学之美' },
                { url: 'https://images.unsplash.com/photo-1513542789411-b6a5d4f31634?w=600&h=750&fit=crop', title: '美食摄影', desc: '视觉的盛宴' },
                { url: 'https://images.unsplash.com/photo-1493246507139-91e8fad9978e?w=600&h=750&fit=crop', title: '动物世界', desc: '自然的生灵' },
                { url: 'https://images.unsplash.com/photo-1518173946687-a4c036bc3c95?w=600&h=750&fit=crop', title: '夜景摄影', desc: '城市的灯火' },
                { url: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=600&h=750&fit=crop', title: '水下世界', desc: '深蓝的神秘' }
            ]
        };

        let currentGalleryCategory = 'landscape';
        let galleryRefreshInterval = null;
        let currentGalleryImages = [];

        // 从数组中随机选取3个不重复的元素
        function getRandomImages(images, count = 3) {
            const shuffled = [...images].sort(() => 0.5 - Math.random());
            return shuffled.slice(0, count);
        }

        // 预加载图片
        function preloadImage(url) {
            return new Promise((resolve, reject) => {
                const img = new Image();
                img.onload = () => resolve(url);
                img.onerror = reject;
                img.src = url;
            });
        }

        // 平滑更新画廊（带淡入淡出效果）
        async function updateGallerySmooth(category) {
            const grid = document.getElementById('gallery-grid');
            const items = grid.querySelectorAll('.gallery-item');
            const newImages = getRandomImages(galleryImages[category]);
            
            // 预加载所有新图片
            await Promise.all(newImages.map(img => preloadImage(img.url)));
            
            // 淡出当前图片
            items.forEach(item => {
                const img = item.querySelector('img');
                if (img) {
                    img.classList.add('fade-out');
                    img.classList.remove('fade-in');
                }
            });
            
            // 等待淡出完成
            await new Promise(resolve => setTimeout(resolve, 800));
            
            // 更新图片和文字
            items.forEach((item, index) => {
                const img = item.querySelector('img');
                const title = item.querySelector('.gallery-title');
                const desc = item.querySelector('.gallery-desc');
                
                if (newImages[index]) {
                    if (img) {
                        img.src = newImages[index].url;
                        img.alt = newImages[index].title;
                        img.classList.remove('fade-out');
                        img.classList.add('fade-in');
                    }
                    if (title) title.textContent = newImages[index].title;
                    if (desc) desc.textContent = newImages[index].desc;
                }
            });
            
            currentGalleryImages = newImages;
        }

        function renderGallery(category) {
            const grid = document.getElementById('gallery-grid');
            const images = getRandomImages(galleryImages[category]);
            currentGalleryImages = images;
            
            grid.innerHTML = images.map((img, index) => `
                <div class="gallery-item" style="animation: fadeInUp 0.6s ease ${index * 0.15}s both;">
                    <img src="${img.url}" alt="${img.title}" loading="lazy" class="fade-in">
                    <div class="gallery-overlay">
                        <div class="gallery-title">${img.title}</div>
                        <div class="gallery-desc">${img.desc}</div>
                    </div>
                </div>
            `).join('');
        }

        // 启动自动刷新
        function startGalleryAutoRefresh() {
            if (galleryRefreshInterval) {
                clearInterval(galleryRefreshInterval);
            }
            galleryRefreshInterval = setInterval(() => {
                if (!document.hidden) {
                    updateGallerySmooth(currentGalleryCategory);
                }
            }, 10000);
        }

        // 停止自动刷新
        function stopGalleryAutoRefresh() {
            if (galleryRefreshInterval) {
                clearInterval(galleryRefreshInterval);
                galleryRefreshInterval = null;
            }
        }

        document.querySelectorAll('.gallery-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.gallery-tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                currentGalleryCategory = tab.dataset.category;
                renderGallery(currentGalleryCategory);
                startGalleryAutoRefresh();
            });
        });

        // 页面可见性变化时控制刷新
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                stopGalleryAutoRefresh();
            } else {
                startGalleryAutoRefresh();
            }
        });

        // 滚动提示点击事件
        document.querySelector('.scroll-hint').addEventListener('click', () => {
            document.getElementById('gallery').scrollIntoView({ behavior: 'smooth' });
        });

        // 音乐播放器 - 新版带播放列表面板
        let musicList = config.music || DEFAULT_CONFIG.music;
        let currentMusicIndex = -1;
        let audio = null;
        let isPlaying = false;
        let isPanelOpen = false;
        
        function initMusicPlayer() {
            if (!audio) {
                audio = new Audio();
                audio.volume = 0.5;
                
                audio.addEventListener('ended', () => {
                    playNextMusic();
                });
                
                audio.addEventListener('error', (e) => {
                    console.error('音乐播放错误:', e);
                    setTimeout(() => playNextMusic(), 1000);
                });
            }
            renderMusicPlaylist();
        }
        
        function renderMusicPlaylist() {
            const listContainer = document.getElementById('music-list');
            if (!listContainer) return;
            
            listContainer.innerHTML = musicList.map((music, index) => {
                const fileName = music.split('/').pop().replace(/\.[^/.]+$/, '');
                const isActive = index === currentMusicIndex;
                return `
                    <li class="music-list-item ${isActive ? 'active' : ''}" onclick="playMusicByIndex(${index})">
                        <div class="music-list-item-icon">
                            <i class="fas fa-music"></i>
                        </div>
                        <div class="music-list-item-name">${fileName}</div>
                        <div class="music-list-item-duration">${isActive && isPlaying ? '<i class="fas fa-volume-up"></i>' : ''}</div>
                    </li>
                `;
            }).join('');
        }
        
        function playMusicByIndex(index) {
            if (index < 0 || index >= musicList.length) return;
            
            currentMusicIndex = index;
            const musicSrc = musicList[index];
            
            if (!audio) initMusicPlayer();
            
            audio.src = musicSrc;
            audio.play().then(() => {
                isPlaying = true;
                updateMusicPlayerUI();
                console.log('正在播放:', musicSrc);
            }).catch(error => {
                console.error('播放失败:', error);
                isPlaying = false;
                updateMusicPlayerUI();
            });
        }
        
        function toggleMusicPanel() {
            const panel = document.getElementById('music-player-panel');
            isPanelOpen = !isPanelOpen;
            
            if (isPanelOpen) {
                initMusicPlayer();
                panel.classList.add('show');
            } else {
                panel.classList.remove('show');
            }
        }
        
        function togglePlayMusic() {
            if (!audio) {
                if (musicList.length > 0) {
                    playMusicByIndex(0);
                }
                return;
            }
            
            if (isPlaying) {
                audio.pause();
                isPlaying = false;
            } else {
                if (!audio.src || audio.ended) {
                    if (musicList.length > 0) {
                        playMusicByIndex(0);
                    }
                } else {
                    audio.play().then(() => {
                        isPlaying = true;
                        updateMusicPlayerUI();
                    }).catch(error => {
                        console.error('播放失败:', error);
                    });
                }
            }
            updateMusicPlayerUI();
        }
        
        function playNextMusic() {
            if (musicList.length === 0) return;
            let nextIndex = currentMusicIndex + 1;
            if (nextIndex >= musicList.length) nextIndex = 0;
            playMusicByIndex(nextIndex);
        }
        
        function playPrevMusic() {
            if (musicList.length === 0) return;
            let prevIndex = currentMusicIndex - 1;
            if (prevIndex < 0) prevIndex = musicList.length - 1;
            playMusicByIndex(prevIndex);
        }
        
        function updateMusicPlayerUI() {
            // 更新面板中的当前音乐信息
            const currentName = document.getElementById('current-music-name');
            const currentStatus = document.getElementById('current-music-status');
            const playBtn = document.getElementById('music-play-btn');
            
            if (currentMusicIndex >= 0 && currentMusicIndex < musicList.length) {
                const fileName = musicList[currentMusicIndex].split('/').pop().replace(/\.[^/.]+$/, '');
                if (currentName) currentName.textContent = fileName;
                if (currentStatus) currentStatus.textContent = isPlaying ? '正在播放...' : '已暂停';
            } else {
                if (currentName) currentName.textContent = '未播放';
                if (currentStatus) currentStatus.textContent = '点击播放';
            }
            
            // 更新播放按钮图标
            if (playBtn) {
                playBtn.innerHTML = isPlaying ? '<i class="fas fa-pause"></i>' : '<i class="fas fa-play"></i>';
            }
            
            // 更新播放列表高亮
            renderMusicPlaylist();
            
            // 更新右上角音乐按钮状态
            const control = document.getElementById('music-control');
            if (control) {
                if (isPlaying) {
                    control.classList.add('playing');
                    control.setAttribute('data-state', 'on');
                    control.innerHTML = '<i class="fas fa-volume-up"></i>';
                } else {
                    control.classList.remove('playing');
                    control.setAttribute('data-state', 'off');
                    control.innerHTML = '<i class="fas fa-music"></i>';
                }
            }
        }
        
        // 音量控制
        let isMuted = false;
        let currentVolume = 50;
        
        function setVolume(value) {
            currentVolume = value;
            if (audio) {
                audio.volume = value / 100;
            }
            const volumeValue = document.getElementById('volume-value');
            const volumeSlider = document.getElementById('volume-slider');
            const volumeIcon = document.getElementById('volume-icon');
            
            if (volumeValue) volumeValue.textContent = value + '%';
            if (volumeSlider) volumeSlider.value = value;
            
            // 更新图标
            if (volumeIcon) {
                if (value == 0 || isMuted) {
                    volumeIcon.className = 'fas fa-volume-mute';
                } else if (value < 50) {
                    volumeIcon.className = 'fas fa-volume-down';
                } else {
                    volumeIcon.className = 'fas fa-volume-up';
                }
            }
            
            // 保存音量设置
            localStorage.setItem('musicVolume', value);
        }
        
        function toggleMute() {
            if (!audio) return;
            
            isMuted = !isMuted;
            if (isMuted) {
                audio.volume = 0;
                document.getElementById('volume-icon').className = 'fas fa-volume-mute';
                document.getElementById('volume-value').textContent = '静音';
            } else {
                audio.volume = currentVolume / 100;
                setVolume(currentVolume);
            }
        }
        
        // 加载保存的音量设置
        function loadVolumeSetting() {
            const savedVolume = localStorage.getItem('musicVolume');
            if (savedVolume !== null) {
                currentVolume = parseInt(savedVolume);
                setVolume(currentVolume);
            }
        }
        
        // 绑定事件
        document.getElementById('music-control').addEventListener('click', toggleMusicPanel);
        
        // 初始化播放器（不自动播放，等待用户点击）
        initMusicPlayer();
        loadVolumeSetting();
        updateMusicControlUI();

        // 确保DOM完全加载后再初始化画廊
        console.log('[Debug] 准备初始化画廊, document.readyState:', document.readyState);
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                console.log('[Debug] DOMContentLoaded 触发，开始渲染画廊');
                renderGallery('landscape');
                startGalleryAutoRefresh();
                console.log('[Debug] 画廊初始化完成');
            });
        } else {
            // DOM已经加载完成
            console.log('[Debug] DOM已加载，直接渲染画廊');
            renderGallery('landscape');
            startGalleryAutoRefresh();
            console.log('[Debug] 画廊初始化完成');
        }
    </script>
    
    <!-- 图标配置文件 -->
    <script src="icons/icon-config.js"></script>
