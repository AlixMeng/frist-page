        // 上传图标
        window.uploadIcon = function(type, index) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (!file) return;
                if (!file.type.startsWith('image/')) {
                    alert('请选择图片文件');
                    return;
                }
                if (file.size > 2 * 1024 * 1024) {
                    alert('图片不能超过2MB');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = (event) => {
                    const dataUrl = event.target.result;
                    if (type === 'app') {
                        config.apps[index].icon = '';
                        config.apps[index].iconUrl = dataUrl;
                        document.getElementById(`app-icon-${index}`).innerHTML = `<img src="${dataUrl}">`;
                        saveConfig(config);
                        renderApps();
                    } else {
                        config.favorites[index].icon = '';
                        config.favorites[index].iconUrl = dataUrl;
                        document.getElementById(`fav-icon-${index}`).innerHTML = `<img src="${dataUrl}">`;
                        saveConfig(config);
                        renderFavorites();
                    }
                };
                reader.readAsDataURL(file);
            };
            input.click();
        }

        // 从图标库选择
        window.selectIconFromLibrary = function(iconKey, iconClass, iconColor) {
            if (currentIconEditType === null || currentIconEditIndex === null) return;
            
            // 找到选中的图标对象
            let selectedIcon = null;
            for (const [category, icons] of Object.entries(LOCAL_SVG_ICONS)) {
                if (category === 'Emoji') continue;
                const found = icons.find(i => i.key === iconKey);
                if (found) {
                    selectedIcon = found;
                    break;
                }
            }
            
            // 如果没有找到图标类，使用emoji模式
            if (!iconClass || iconClass === '') {
                // Emoji 模式
                if (currentIconEditType === 'app') {
                    config.apps[currentIconEditIndex].icon = iconKey;
                    config.apps[currentIconEditIndex].iconUrl = '';
                    config.apps[currentIconEditIndex].iconClass = '';
                    document.getElementById(`app-icon-${currentIconEditIndex}`).innerHTML = iconKey;
                } else {
                    config.favorites[currentIconEditIndex].icon = iconKey;
                    config.favorites[currentIconEditIndex].iconUrl = '';
                    config.favorites[currentIconEditIndex].iconClass = '';
                    document.getElementById(`fav-icon-${currentIconEditIndex}`).innerHTML = iconKey;
                }
            } else {
                // FontAwesome 模式
                const iconHtml = `<i class="${iconClass}" style="color: ${iconColor}; font-size: 32px;"></i>`;
                if (currentIconEditType === 'app') {
                    config.apps[currentIconEditIndex].icon = '';
                    config.apps[currentIconEditIndex].iconUrl = '';
                    config.apps[currentIconEditIndex].iconClass = iconClass;
                    config.apps[currentIconEditIndex].iconColor = iconColor;
                    document.getElementById(`app-icon-${currentIconEditIndex}`).innerHTML = iconHtml;
                } else {
                    config.favorites[currentIconEditIndex].icon = '';
                    config.favorites[currentIconEditIndex].iconUrl = '';
                    config.favorites[currentIconEditIndex].iconClass = iconClass;
                    config.favorites[currentIconEditIndex].iconColor = iconColor;
                    document.getElementById(`fav-icon-${currentIconEditIndex}`).innerHTML = iconHtml;
