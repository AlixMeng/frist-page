        async function getWeather(city = currentCity) {
            const weatherInfo = document.getElementById('weather-info');
            if (!weatherInfo) return;
            
            try {
                // 显示加载状态
                weatherInfo.textContent = '更新中...';
                
                // 构建URL，添加随机参数防止缓存
                const cacheBuster = Date.now();
                const url = `https://wttr.in/${encodeURIComponent(city)}?format=%l:+%c+%t&${cacheBuster}`;
                
                const response = await fetch(url, { 
                    mode: 'cors',
                    headers: {
                        'Accept': 'text/plain'
                    }
                });
                
                if (response.ok) {
                    const data = await response.text();
                    // 解析返回的数据格式: "City: Weather +XX°C"
                    const match = data.match(/^(.+?):\s*(.+?)\s+([\+\-]?\d+°C)/);
                    if (match) {
                        const [, returnedCity, weather, temp] = match;
                        const cityName = cityNames[city] || returnedCity || city;
                        weatherInfo.textContent = `${cityName} ${temp}`;
                    } else {
                        // 如果解析失败，显示原始数据
                        weatherInfo.textContent = data.trim().substring(0, 20);
                    }
                } else {
                    throw new Error('Weather API error');
                }
            } catch (e) {
                console.error('Weather fetch error:', e);
                const cityName = cityNames[city] || city;
                weatherInfo.textContent = `${cityName} --°C`;
            }
        }

