        /* 动态列数：最多5列 */
        .apps-grid[data-count="1"] { grid-template-columns: repeat(1, 1fr); max-width: 180px; }
        .apps-grid[data-count="2"] { grid-template-columns: repeat(2, 1fr); max-width: 360px; }
        .apps-grid[data-count="3"] { grid-template-columns: repeat(3, 1fr); max-width: 540px; }
        .apps-grid[data-count="4"] { grid-template-columns: repeat(4, 1fr); max-width: 720px; }
        .apps-grid[data-count="5"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        /* 6个 = 2行x3列 */
        .apps-grid[data-count="6"] { grid-template-columns: repeat(3, 1fr); max-width: 540px; }
        /* 7-10个 = 2行 */
        .apps-grid[data-count="7"] { grid-template-columns: repeat(4, 1fr); max-width: 720px; }
        .apps-grid[data-count="8"] { grid-template-columns: repeat(4, 1fr); max-width: 720px; }
        .apps-grid[data-count="9"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        .apps-grid[data-count="10"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        /* 11-15个 = 3行 */
        .apps-grid[data-count="11"] { grid-template-columns: repeat(4, 1fr); max-width: 720px; }
        .apps-grid[data-count="12"] { grid-template-columns: repeat(4, 1fr); max-width: 720px; }
        .apps-grid[data-count="13"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        .apps-grid[data-count="14"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        .apps-grid[data-count="15"] { grid-template-columns: repeat(5, 1fr); max-width: 900px; }
        /* 默认5列 */
        .apps-grid:not([data-count]) { grid-template-columns: repeat(5, 1fr); max-width: 900px; }

        @media (max-width: 700px) {
            .apps-grid, 
            .apps-grid[data-count],
            .apps-grid:not([data-count]) {
                grid-template-columns: repeat(3, 1fr) !important;
                max-width: 100% !important;
            }
        }

        @media (max-width: 500px) {
            .apps-grid,
            .apps-grid[data-count],
            .apps-grid:not([data-count]) {
                grid-template-columns: repeat(2, 1fr) !important;
                max-width: 100% !important;
            }
